
use application 'polytope';
my $file=shift;
my $p=is_object($file) ? $file : load($file);
my $HD=$p->HASSE_DIAGRAM;
my $dim=$HD->dim;
print "FACE_LATTICE\n";
for (my $d=$dim-1; $d>=0; --$d) {
  print "{";
  foreach my $n (@{$HD->nodes_of_dim($d)}) {
     print $HD->FACES->[$n], " ";
  }
  print "}\n"
}
print "\n"

